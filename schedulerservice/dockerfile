FROM node:24-alpine

RUN apk add --no-cache curl

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY prisma ./prisma
COPY src ./src
COPY tsconfig.json ./

RUN npm run build

EXPOSE 3304

CMD ["npm", "run", "start-production"]

HEALTHCHECK --interval=5s --timeout=3s --retries=5 CMD sh -c "curl -f http://localhost:3304/health/live && curl -f http://localhost:3304/health/ready || exit 1"
