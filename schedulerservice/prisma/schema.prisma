generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  username     String
  phone        String         @unique
  password     String
  createdAt    DateTime       @default(now())
  ScheduledJob ScheduledJob[]
}

model ScheduledJob {
  id                 String   @id @default(uuid())
  userId             String
  payload            Json
  AuthorJob          User     @relation(fields: [userId], references: [id])
  run_at             DateTime
  recurrence_pattern String
  is_recurring       Boolean
  created_at         DateTime @default(now())
}

model Outbox {
  id             String    @id @default(uuid())
  aggregate_type String    @default("")
  scheduleId     String
  event_type     String
  payload        Json
  status         String    @default("pending")
  error_reason   String?
  processed_at   DateTime?
  created_at     DateTime  @default(now())
}
