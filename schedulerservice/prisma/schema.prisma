generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id
  username     String
  phone        String
  password     String
  createdAt    DateTime       @default(now())
  ScheduledJob ScheduledJob[]
}

model ScheduledJob {
  id                 String   @id
  userId             String
  AuthorJob          User     @relation(fields: [userId], references: [id])
  run_at             DateTime
  recurrence_pattern Json
  is_recurring       Boolean
  created_at         DateTime @default(now())
}

model Outbox {
  id           String    @id
  type         String
  scheduleId   String
  event_type   String
  payload      Json
  status       String    @default("pending")
  error_reason String?
  processed_at DateTime?
  created_at   DateTime  @default(now())
}
